//Program to Mangoes Discount (Buy 3 Get 1 Free) Find Total Amount need to pay
import java.util.Scanner;

public class MangoDiscount {

    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        System.out.print("Enter the price per mango: ");
        double pricePerMango = scanner.nextDouble();
        System.out.print("Enter the total number of mangoes you want to buy: ");
        int totalMangoes = scanner.nextInt();
        int freeMangoes = totalMangoes / 4;
                int paidMangoes = totalMangoes - freeMangoes;
        double totalAmount = paidMangoes * pricePerMango;
        System.out.println("Total paid mangoes: " + paidMangoes);
        System.out.println("Total amount to pay: â‚¹" + totalAmount);
        scanner.close();
    }
}
